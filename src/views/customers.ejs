<%- include ("partials/_header") %> 
    <style>
        .box {
            background-color: #f8f9fa;
            border: 2px solid #dee2e6;
            padding: 20px;
            text-align: center;
            height: 150px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.2em;
        }
        .box-middle {
            background-color: #d4edda;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <div class="row">
        <!-- Caja 1: Objetivos -->
        <div class="col-md-4 mb-4">
            <div class="box">
                <p>Objetivos</p>
            </div>
        </div>

        <!-- Caja 2: Gastos Fijos -->
        <div class="col-md-4 mb-4">
            <div class="box">
                <p>Gastos Fijos</p>
            </div>
        </div>

        <!-- Caja del Medio: Dinero Disponible -->
        <div class="col-md-4 mb-4">
            <div class="box box-middle">
                <p>Dinero Disponible</p>
            </div>
        </div>

        <!-- Caja 3: Gastos Variables -->
        <div class="col-md-4 mb-4">
            <div class="box">
                <p>Gastos Variables</p>
            </div>
        </div>

        <!-- Caja 4: Total Gastado -->
        <div class="col-md-4 mb-4">
            <div class="box">
                <p>Total Gastado</p>
            </div>
        </div>
    </div>
</div>


<%- include ("partials/_footer") %>
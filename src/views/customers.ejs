<%- include('partials/_header') %>

<!-- Registrar Gastos Fijos -->
<h1 class="m-4 text-center">Registrar Gastos Fijos</h1>
<div class="row">
    <!-- Formulario -->
    <div class="col-md-4">
        <div class="card border-secondary shadow-lg m-3 p-3">
            <form action="/gastosf" method="POST">
                <div class="card-body">
                    <h4 class="text-success mb-4">Registrar Gasto Fijo</h4>
                    <div class="form-group mb-3">
                        <label for="nombre_gasto">Nombre del Gasto:</label>
                        <input type="text" id="nombre_gasto" name="nombre_gasto" class="form-control" placeholder="Ej: Alquiler" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="cantidad">Cantidad (COP):</label>
                        <input type="number" id="cantidad" name="cantidad" step="0.01" class="form-control" placeholder="Ej: 500000" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="fecha">Fecha:</label>
                        <input type="date" id="fecha" name="fecha" class="form-control" required>
                    </div>
                    <div class="form-group mb-4">
                        <label for="categoria">Categor√≠a:</label>
                        <select id="categoria" name="categoria" class="form-control" required>
                            <option value="necesidad">Necesidad</option>
                            <option value="deseo">Deseo</option>
                            <option value="ahorro">Ahorro</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Registrar Gasto</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de Gastos Fijos -->
    <div class="col-md-8">
        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-lg">
                <thead class="table-secondary">
                    <tr>
                        <th>N¬∞</th>
                        <th>Nombre del gasto</th>
                        <th>Cantidad</th>
                        <th>Fecha</th>
                        <th>Categor√≠a</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data){ %>
                        <% for (var i = 0; i < data.length; i++ ){ %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= data[i].nombre_gasto %></td>
                                <td><%= data[i].cantidad %></td>
                                <td><%= data[i].fecha %></td>
                                <td><%= data[i].categoria %></td>
                                <td>
                                    <div class="d-flex justify-content-around">
                                        <a href="/deletegastos/<%= data[i].id %>" class="btn btn-danger btn-sm w-50 mx-1">üóë Eliminar</a>
                                        <a href="/updategastosf/<%= data[i].id %>" class="btn btn-info btn-sm w-50 mx-1">‚úè Actualizar</a>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>


<%- include ('partials/_header')  %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md5">
            <div class="card-body">
                <form action="/updategastosf/<%= data.id %>" method="POST">
                    <label for="nombre_gasto">Nombre del Gasto:</label>
                    <input type="text" id="nombre_gasto" name="nombre_gasto" value="<%= data.nombre_gasto %>" required>
                    <br><br>
            
                    <label for="cantidad">Cantidad:</label>
                    <input type="number" id="cantidad" name="cantidad" value="<%= data.cantidad %>" step="0.01" required>
                    <br><br>
            
                    <label for="fecha">Fecha:</label>
                    <input type="date" id="fecha" name="fecha" value="<%= data.fecha %>" required>
                    <br><br>
            
                    <label for="categoria">Categor√≠a:</label>
                    <select id="categoria" name="categoria" value="<%= data.categoria %>"  required>
                        <option value="necesidad">Necesidad</option>
                        <option value="deseo">Deseo</option>
                        <option value="ahorro">Ahorro</option>
                    </select>
                    <br><br>
            
                    <button type="submit" class="btn btn-primary m-4">Registrar Gasto</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/_footer')  %>